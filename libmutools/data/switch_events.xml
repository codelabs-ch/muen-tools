<?xml version="1.0" encoding="utf-8"?>
<system>
 <config>
  <boolean name="iommu_enabled" value="true"/>
 </config>
 <hardware>
  <processor cpuCores="1" speed="2900" vmxTimerRate="5"/>
  <memory>
   <memoryBlock allocatable="true" name="ram_1" physicalAddress="16#0000#" size="16#8000_0000#"/>
  </memory>
  <devices>
   <device name="debugconsole">
    <ioPort end="16#50b8#" name="serial" start="16#50b0#"/>
   </device>
  </devices>
 </hardware>
 <kernelDiagnosticsDevice physical="debugconsole">
  <ioPort physical="serial"/>
 </kernelDiagnosticsDevice>
 <memory>
  <memory caching="WB" name="dummy" physicalAddress="16#1000#" size="16#1000#"/>
 </memory>
 <events>
  <event name="to_subj1" mode="switch"/>
  <event name="to_subj2" mode="switch"/>
  <event name="to_subj3_from_subj1" mode="switch"/>
  <event name="to_subj3_from_subj2" mode="switch"/>
 </events>
 <components>
  <component name="c1">
   <binary filename="c1_bin" size="16#1000#" virtualAddress="16#2000#"/>
  </component>
  <component name="c2">
   <binary filename="c2_bin" size="16#1000#" virtualAddress="16#2000#"/>
  </component>
  <component name="c3">
   <binary filename="c3_bin" size="16#1000#" virtualAddress="16#2000#"/>
  </component>
 </components>
 <subjects>
  <subject name="subj1" profile="native">
   <memory>
    <memory executable="false" logical="dummy" physical="dummy" virtualAddress="16#1000#" writable="true"/>
   </memory>
   <devices/>
   <events>
    <source>
     <group name="vmx_exit">
      <default physical="to_subj2"/>
      <event id="1" logical="to_subj3" physical="to_subj3_from_subj1"/>
     </group>
    </source>
    <target>
     <event physical="to_subj1" logical="to_subj1"/>
    </target>
   </events>
   <component ref="c1"/>
  </subject>
  <subject name="subj2" profile="native">
   <memory>
    <memory executable="false" logical="dummy" physical="dummy" virtualAddress="16#1000#" writable="true"/>
   </memory>
   <devices/>
   <events>
    <source>
     <group name="vmx_exit">
      <event id="1" logical="to_subj3" physical="to_subj3_from_subj2"/>
      <event id="2" logical="to_subj4" physical="to_subj4"/>
     </group>
    </source>
    <target>
     <event physical="to_subj2" logical="to_subj2"/>
    </target>
   </events>
   <component ref="c2"/>
  </subject>
  <subject name="subj3" profile="native">
   <memory>
    <memory executable="false" logical="dummy" physical="dummy" virtualAddress="16#1000#" writable="true"/>
   </memory>
   <devices/>
   <events>
    <source>
     <group name="vmx_exit">
      <event id="1" logical="to_subj1" physical="to_subj1"/>
     </group>
    </source>
    <target>
     <event physical="to_subj3_from_subj1" logical="to_subj3_from_subj1"/>
     <event physical="to_subj3_from_subj2" logical="to_subj3_from_subj2"/>
    </target>
   </events>
   <component ref="c3"/>
  </subject>
 </subjects>
 <scheduling tickRate="10000">
  <majorFrame>
   <cpu id="0">
    <minorFrame subject="subj1" ticks="80"/>
   </cpu>
  </majorFrame>
 </scheduling>
</system>
