<?xml version="1.0"?>
<!DOCTYPE system [
<!ENTITY hardware   SYSTEM "hardware_t430s.xml">
<!ENTITY kernel     SYSTEM "example_kernel.xml">
<!ENTITY binaries   SYSTEM "example_binaries.xml">
<!ENTITY tau0init   SYSTEM "subjects/tau0.xml">
<!ENTITY tau0mem    SYSTEM "subjects/tau0_mem.xml">
<!ENTITY dumperinit SYSTEM "subjects/dumper.xml">
<!ENTITY dumpermem  SYSTEM "subjects/dumper_mem.xml">
<!ENTITY subjainit  SYSTEM "subjects/subject_a.xml">
<!ENTITY subjamem   SYSTEM "subjects/subject_a_mem.xml">
<!ENTITY subjbinit  SYSTEM "subjects/subject_b.xml">
<!ENTITY subjbmem   SYSTEM "subjects/subject_b_mem.xml">
]>
<system vmxon_address="1000" vmcs_start_address="2000">
	&hardware;
	&kernel;
	&binaries;

	<subjects>
		<subject id="0" name="tau0" pml4_address="210000" io_bitmap_address="214000">
			&tau0init;
			<memory_layout>
				&tau0mem;
				<!-- Ï„0 => kernel interface page -->
				<memory_region physical_address="1ff000" virtual_address="4000" size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<device name="serial"/>
		</subject>
		<subject id="1" name="dumper" pml4_address="220000" io_bitmap_address="224000">
			&dumperinit;
			<memory_layout>
				&dumpermem;
				<!-- subject state descriptors -->
				<memory_region physical_address="1fe000" virtual_address="5000" size="4k" alignment="4k" writable="false" executable="false"/>
			</memory_layout>
			<device name="serial"/>
		</subject>
		<subject id="2" name="subject_a" pml4_address="230000" io_bitmap_address="234000">
			&subjainit;
			<memory_layout>
				&subjamem;
			</memory_layout>
			<device name="vga"/>
		</subject>
		<subject id="3" name="subject_b" pml4_address="240000" io_bitmap_address="244000">
			&subjbinit;
			<memory_layout>
				&subjbmem;
			</memory_layout>
			<device name="vga"/>
		</subject>
	</subjects>
</system>
