<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xs:include schemaLocation="./types.xsd"/>

	<xs:complexType name="binaries_type">
		<xs:annotation>
			<xs:documentation>
				The binaries section of the policy specifies all binary files that can be used as subject
				binaries.
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="binary" type="binary_type" minOccurs="1" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="binary_type">
		<xs:annotation>
			<xs:documentation>
				A binary is specified by its name and file path. The path is used during system
				image packaging to locate the binary file. The path is relative to the projects
				top-level directory.
			</xs:documentation>
		</xs:annotation>
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="path" type="xs:string" use="required"/>
		<xs:attribute name="format" type="format_type" use="required"/>
	</xs:complexType>

	<xs:simpleType name="format_type">
		<xs:annotation>
			<xs:documentation>
				Binaries should be either in ELF or raw binary format or bzImage (Linux).
			</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value="elf"/>
			<xs:enumeration value="raw"/>
			<xs:enumeration value="bzimage"/>
		</xs:restriction>
	</xs:simpleType>

</xs:schema>
