with "../../common/defaults";

project Packer is

   for Source_Dirs use
     ("src",
      "../../common/**",
      "../../policy/include",
      "../../policy/pack");
   for Object_Dir use "obj";
   for Main use ("skpacker.adb");

   package Compiler is
      for Default_Switches ("Ada") use Defaults.Ada_Compiler_Switches
        & "-gnat05" & "-gnatwale";
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-E");
   end Binder;

end Packer;
