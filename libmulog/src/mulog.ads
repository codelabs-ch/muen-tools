package Mulog
is

   type Log_Level is
     (Debug,
      Info,
      Notice,
      Warning,
      Error,
      Critical,
      Alert,
      Emergency);

   --  Log the specified message with given loglevel.
   procedure Log
     (Level : Log_Level := Info;
      Msg   : String);

end Mulog;
